<!-- Page Wrapper -->
<div id="wrapper">
    <%= render "home/sidebar" %>
    
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%= render "home/topbar" %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card border-warning">
                <!-- Page Heading -->
                <div class="card-header bg-dark text-light d-sm-flex align-items-center justify-content-between">
                    <h3>Personal Requests</h3>
                    <%= link_to new_request_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
                        <i class="fas fa-user-plus fa-sm text-white-50"></i> Create new request
                    <% end %>
                </div>

                <div class="card-body">
                      <% if notice %>
                        <p style="color: green"><%= notice %></p>
                      <% end %>
                  <table class="table table-striped " id = "user_table">
                  
                    <thead class="bg-def text-light">
                    <div id="example_wrapper" class="row">
                          <div class="col-md-6">
                              <div class="dataTables_filter">
                                  <!-- Add the search input here -->
                              </div>
                              <div class="dataTables_buttons">
                                  <!-- Buttons will be appended here -->
                              </div>
                          </div>
                          <!-- Other content here -->
                      </div>
                      <tr>
                        <th>SN</th>
                        <th>Amount</th>
                        <th>Account</th>
                        <th>Status</th>
                        <th>Paid by</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% 
                            sn = 0
                            @requests.each do |request| 

                        
                        %>
                      <tr>
                        <td><%= sn += 1 %></td>
                        <td><%= request.amount %></td>
                        <td><%= request.account.gl %></td>                        
                        <td><%= request.status %></td>
                        <td><%= request.paid_by.present? ? request.paid_by.name : "Pending Payment" %>
                        </td>
                        <td><%= link_to "view", request_path(request) %></td>
                        
                      </tr>
                      <% end %>
                    </tbody>
                  </table>                 
                  
                </div>
              
              </div>                    
                    
                   
               

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        
        <%= render "footer" %>
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

   