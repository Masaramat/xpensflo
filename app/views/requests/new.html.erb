
<!-- Page Wrapper -->
<div id="wrapper">
    <%= render "home/sidebar" %>
    
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%= render "home/topbar" %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card border-warning">
                <!-- Page Heading -->
                <div class="card-header bg-dark text-light d-sm-flex align-items-center justify-content-between">
                    <h3>Make Request</h3>
                    
                </div>

                <div class="card-body">
                      <% if notice %>
                        <p style="color: green"><%= notice %></p>
                      <% end %>
                      <%= render partial: 'form', locals: { accounts: @accounts } %>               
                  
                </div>
              
              </div>                    
                    
                   
               

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%= render "home/footer" %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


<script>
  document.addEventListener('DOMContentLoaded', function() {
    const paymentTypeSelect = document.getElementById('request_payment_type');
    const transferDetails = document.getElementById('transfer-details');

    // Initially hide transfer details
    transferDetails.style.display = 'none';

    // Add event listener to payment type select
    paymentTypeSelect.addEventListener('change', function() {
      if (paymentTypeSelect.value === 'transfer') {
        transferDetails.style.display = 'flex';
      } else {
        transferDetails.style.display = 'none';
      }
    });
  });
</script>



  

