<!-- Page Wrapper -->
<div id="wrapper">
    <%= render "home/sidebar" %>
    
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%= render "home/topbar" %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card border-warning">
                <!-- Page Heading -->
                <div class="card-header bg-dark text-light d-sm-flex align-items-center justify-content-between">
                    <h1>Users</h1>
                    <%= link_to new_admin_user_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
                        <i class="fas fa-user-plus fa-sm text-white-50"></i> Create new user
                    <% end %>
                </div>

                <div class="card-body">
                  <% if notice %>
                    <p style="color: green"><%= notice %></p>
                  <% end %>
                  <table class="table table-striped " id = "user_table">
                  
                    <thead class="bg-def text-light">
                    <div id="example_wrapper" class="row">
                          <div class="col-md-6">
                              <div class="dataTables_filter">
                                  <!-- Add the search input here -->
                              </div>
                              <div class="dataTables_buttons">
                                  <!-- Buttons will be appended here -->
                              </div>
                          </div>
                          <!-- Other content here -->
                      </div>
                      <tr>
                        <th>Name</th>
                        <th>Branch</th>
                        <th>Role</th>
                        <th>Email</th>
                        <th>Option</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user| %>
                      <tr>
                        <td><%= user.name %></td>
                        <td><%= user.branch.name %></td>                        
                        <td><%= user.role %></td>
                        <td><%= user.email %></td>
                        <td><%= link_to "view", admin_user_path(user) %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>                 
                  
                </div>
              
              </div>                    
                    
                   
               

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <%= render "home/footer" %>
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<script>
  $(document).ready(function() {
    var table = $('#user_table').DataTable( {
        lengthChange: false,
        buttons: [
            { extend: 'excel', filename: 'Expense flow users', text: 'Excel' },
            { extend: 'pdf', filename: 'Expense flow users', text: 'PDF' },
            { extend: 'colvis', text: 'View Columns' }
        ],
        scrollY: '350px'
    } );
    table.buttons().container()
        .appendTo( '.dataTables_buttons' );
  } );
</script>
