
<!-- Page Wrapper -->
<div id="wrapper">
    <%= render "home/sidebar" %>
    
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%= render "home/topbar" %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card border-warning">
                <!-- Page Heading -->
                <div class="card-header bg-dark text-light d-sm-flex align-items-center justify-content-between">
                    <h3>Profile</h3>
                    
                </div>

                <div class="card-body">
                      <% if notice %>
                        <p style="color: green"><%= notice %></p>
                      <% end %>
                      <%= render @user %>
                    <% if @user != current_user and @user.role != "admin" %>
                      <div class = "row">
                        <div class="col-lg-2">
                          <%= link_to "Edit this user", edit_admin_user_path(@user), class:"btn btn-dark form-control" %> 
                        </div>
                        <div class="col-lg-2">
                          <%= button_to "Delete this user", admin_user_path(@user), method: :delete, class:"btn btn-danger form-control" %>

                        </div>
                      </div>

                    <% end %>
                         
                </div>
              
              </div>                    
                    
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%= render "home/footer" %> 

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->





